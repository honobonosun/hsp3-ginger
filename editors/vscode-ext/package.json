{
    "name": "hsp3-ginger",
    "displayName": "HSP3 Ginger",
    "description": "HSP3 文法とコマンド",
    "version": "0.1.0",
    "author": {
        "name": "vain0x",
        "email": "vainzerox@gmail.com"
    },
    "publisher": "vain0x",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/vain0x/hsp3-ginger.git"
    },
    "homepage": "https://github.com/vain0x/hsp3-ginger",
    "categories": [
        "Programming Languages"
    ],
    "engines": {
        "vscode": "^1.28.0"
    },
    "devDependencies": {
        "typescript": "^3.4.3",
        "vsce": "^1.59.0",
        "vscode": "^1.1.33"
    },
    "scripts": {
        "postinstall": "vscode-install",
        "build": "tsc -b",
        "watch": "tsc -b -w"
    },
    "main": "out/extension.js",
    "activationEvents": [
        "onLanguage:hsp3"
    ],
    "contributes": {
        "languages": [
            {
                "id": "hsp3",
                "extensions": [
                    ".hsp",
                    ".as"
                ],
                "aliases": [
                    "HSP3",
                    "hsp"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "hsp3",
                "scopeName": "source.hsp3",
                "path": "./lib/language-hsp3/grammars/hsp3.json"
            }
        ],
        "configuration":{
            "type": "object",
            "title": "HSP3 configuration",
            "properties": {
                "hsp3-ginger.compilerPath": {
                    "title": "コンパイラの絶対パス",
                    "type": "string",
                    "default": "C:/hsp35/hspc.exe"
                },
                "hsp3-ginger.sourceEncoding": {
                    "title": "スクリプトのエンコーディング (SHIFT_JIS / utf-8)",
                    "anyOf": [
                        "SHIFT_JIS",
                        "utf-8"
                    ],
                    "default": "SHIFT_JIS"
                }
            }
        },
        "commands": [
            {
                "command": "hsp3-ginger.help",
                "title": "Help",
                "category": "hsp3-ginger"
            }
        ],
        "keybindings": [
            {
                "command": "hsp3-ginger.help",
                "key": "ctrl+f1",
                "mac": "cmd+f1",
                "when": "editorTextFocus"
            }
        ]
    }
}
