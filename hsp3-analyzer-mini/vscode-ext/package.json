{
  "name": "hsp3-analyzer-mini",
  "displayName": "HSP3 アナライザー・ミニ (LSP)",
  "version": "0.2.1",
  "description": "HSP3 の実用最小限なインテリセンス",
  "repository": "https://github.com/vain0x/hsp3-ginger",
  "author": "vain0x",
  "publisher": "vain0x",
  "license": "CC0-1.0",
  "private": true,
  "main": "./dist/extension",
  "activationEvents": [
    "onLanguage:hsp3"
  ],
  "engines": {
    "vscode": "^1.45.1"
  },
  "devDependencies": {
    "@types/node": "^14",
    "@types/vscode": "^1.45.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3",
    "vsce": "^1",
    "vscode-languageserver-protocol": "^3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "vscode-languageclient": "7.0.0-next.1"
  },
  "scripts": {
    "tsc-build": "tsc -b",
    "tsc-watch": "tsc -w",
    "build": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "webpack-prod": "webpack --mode production",
    "vsce-package": "vsce package --out ham.vsix"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "hsp3-analyzer-mini config",
      "properties": {
        "hsp3-analyzer-mini.hsp3-root": {
          "type": "string",
          "description": "HSP のディレクトリへの絶対パス。未指定時は、環境変数 HSP3_ROOT か、既定のインストールディレクトリが使用されます。"
        },
        "hsp3-analyzer-mini.lsp-bin": {
          "type": "string",
          "description": "[開発者向け] LSP の実行ファイルへの絶対パス。未指定時は同梱されているものが使用されます。"
        },
        "hsp3-analyzer-mini.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "[開発者向け] LSP サーバーの通信ログの詳細度",
          "scope": "window"
        }
      }
    }
  }
}
